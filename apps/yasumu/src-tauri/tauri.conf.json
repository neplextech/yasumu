{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Yasumu",
  "version": "0.1.0",
  "identifier": "dev.yasumu.app",
  "build": {
    "beforeDevCommand": "pnpm run bundle && pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm run bundle && pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Yasumu",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/"]
  }
}
