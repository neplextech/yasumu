{
  "extends": "@yasumu/tsconfig/next.json",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,

    "paths": {
      "@/*": ["./src/*"],
      "@yasumu/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
