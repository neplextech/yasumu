{
  "name": "@yasumu/server",
  "version": "0.0.1",
  "description": "Yasumu backend server",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "nest build",
    "build:check": "tsc --noEmit",
    "dev": "nest start --watch",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neplextech/yasumu.git"
  },
  "keywords": [
    "yasumu"
  ],
  "author": "Twilight <hello@twlite.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neplextech/yasumu/issues"
  },
  "homepage": "https://github.com/neplextech/yasumu#readme",
  "dependencies": {
    "@nestjs/common": "^11.0.20",
    "@nestjs/core": "^11.0.20",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.20",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.4.0",
    "nestjs-prisma": "^0.25.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.4",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.20",
    "@swc/cli": "^0.7.3",
    "@swc/core": "^1.11.21",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.1.1",
    "@yasumu/tsconfig": "workspace:^",
    "prisma": "^6.4.0",
    "supertest": "^7.1.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.1.1"
  }
}
